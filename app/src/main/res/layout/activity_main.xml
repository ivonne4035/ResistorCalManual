<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="@drawable/resistor1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FBand"
        android:hint="First band"
        android:textColor="#ffff40a7"
        android:textColorHint="#ff291dff"
        android:layout_alignBottom="@+id/Results"
        android:layout_alignRight="@+id/TBand"
        android:layout_alignEnd="@+id/TBand" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SBand"
        android:layout_below="@+id/FBand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Second Band"
        android:textColorHint="#ff291dff"
        android:textColor="#ffff40a7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TBand"
        android:hint="Third Band"
        android:layout_below="@+id/SBand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColorHint="#ff291dff"
        android:textColor="#ffff40a7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TolBand"
        android:hint="Tolerance Band"
        android:textColorHint="#ff291dff"
        android:textColor="#ffff40a7"
        android:layout_below="@+id/TBand"
        android:layout_toLeftOf="@+id/Tolerance"
        android:layout_toStartOf="@+id/Tolerance" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Results"
        android:hint="Results"
        android:textColorHint="#ff3b39ff"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff40a7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCalculate"
        android:hint="Calculate"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Tolerance"
        android:layout_alignEnd="@+id/Tolerance"
        android:layout_alignLeft="@+id/Results"
        android:layout_alignStart="@+id/Results" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tolerance"
        android:hint="Tolerance"
        android:textSize="32sp"
        android:textIsSelectable="false"
        android:textColorHint="#ff3b39ff"
        android:textColor="#ffff40a7"
        android:layout_alignBottom="@+id/SBand"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/buttonInstructions"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TolBand"
        android:layout_alignEnd="@+id/TolBand" />

</RelativeLayout>
